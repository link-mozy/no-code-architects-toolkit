# Local Development Environment Configuration
# No Code Architect Toolkit - Local Setup with MinIO

# App Configuration
APP_NAME=NCAToolkit
APP_DEBUG=true
APP_DOMAIN=localhost:18083
APP_URL=http://localhost:18083

# API Configuration
API_KEY=example-api-key

# MinIO S3-Compatible Storage Configuration
S3_ENDPOINT_URL=http://minio:9000
S3_ACCESS_KEY=admin
S3_SECRET_KEY=example-password
S3_REGION=us-east-1
S3_BUCKET_NAME=nca-toolkit

# Optional: Gunicorn Configuration
GUNICORN_WORKERS=2
GUNICORN_TIMEOUT=300

# n8n Configuration
N8N_HOST=n8n.we-freedom.work
N8N_PORT=5678
N8N_PROTOCOL=http
WEBHOOK_URL=http://n8n.we-freedom.work:5678/
GENERIC_TIMEZONE=Asia/Seoul